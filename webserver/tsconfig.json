{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2017",
    "allowJs": true,
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
